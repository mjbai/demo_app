<li id="<%= feed_item.id %>">
<%= link_to gravatar_for(feed_item.user), feed_item.user %>
			     <% if feed_item.image? %>
				     <%= image_tag feed_item.image.url, :class=>"imagefeed" %>
				       <% end %>
  <span class="user">
    <%= link_to feed_item.user.first + ' ' + feed_item.user.last, feed_item.user %> learned
  </span>
  <span class="content"><b><%= link_to feed_item.word, feed_item %></b> means '<%= feed_item.definition %>'</span>
  <span class="timestamp">
	 during <%= feed_item.context %> <%= time_ago_in_words(feed_item.created_at) %> ago.
 </span>
  <% if current_user?(feed_item.user) %>
    <%= link_to "delete", feed_item, method: :delete,
                                     data: { confirm: "You sure?" },
                                     title: feed_item.word %>
			     <% end %>
   </li>



